<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.QuestionActivity">
    <LinearLayout
        android:id="@+id/layoutProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_xxlarge"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_medium_2"
            app:srcCompat="@drawable/ic_baseline_check_circle_24" />

        <ProgressBar
            android:id="@+id/pgBar"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/imageView"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/colorPrimary"
            android:progress="50"
            style="@android:style/Widget.Material.ProgressBar.Horizontal"
            />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_medium_3"
            android:paddingTop="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_medium_2"
            app:srcCompat="@drawable/ic_baseline_check_circle_24" />
    </LinearLayout>
    <TableRow
        android:id="@+id/tb1"
        android:layout_below="@id/layoutProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:weightSum="2" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/margin_medium"
            android:paddingHorizontal="@dimen/margin_medium_2"
            android:text="အထွေထွေမေးခွန်းများ"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular" />
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/margin_medium"
            android:paddingHorizontal="@dimen/margin_medium_2"
            android:text="ရောဂါဆိုင်ရာ မေးခွန်းများ"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular" />
    </TableRow>

    <LinearLayout android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_below="@id/tb1"
        android:id="@+id/oneTime"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:background="@color/grey_100"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ly_onetime_fil"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="မွေးနေ့"
                        android:textSize="@dimen/text_regular"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            app:cardElevation="3dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/white">
                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:spinnerMode="dialog"
                                android:entries="@array/days"
                                android:id="@+id/day_spinner"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            app:cardElevation="3dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/white">
                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:spinnerMode="dialog"
                                android:entries="@array/Month"
                                android:id="@+id/month_spinner"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            app:cardElevation="3dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/white">
                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:spinnerMode="dialog"
                                android:entries="@array/years"
                                android:id="@+id/year_spinner"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="အရပ်"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/white">
                        <RelativeLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_white"
                                android:padding="10dp"
                                android:maxLines="1"
                                android:hint="0"
                                android:inputType="number"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:id="@+id/ed_height"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="ft"
                                android:gravity="center"
                                android:layout_margin="5dp"
                                android:textSize="20dp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="သွေးအမျိုးအစား"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/white">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:entries="@array/bloodtype"
                            android:id="@+id/bloodtype_spinner"/>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    android:visibility="gone"
                    android:id="@+id/card_userinfo"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_margin="6dp"
                            android:padding="5dp"
                            android:id="@+id/userinfotext"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="ပေါင်ချိန်"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white">
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_white"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:textSize="13sp"
                            android:hint="0"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:id="@+id/ed_weight"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="lb"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="သွေးအမျိုးအစညး"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white">
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_white"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:textSize="13sp"
                            android:hint="0"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:id="@+id/ed_bloodpressure"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="mmhg"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textSize="20dp"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="မတည့်သော ဆေးအမျိုးအစား"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_white"
                        android:padding="10dp"
                        android:maxLines="4"
                        android:lines="5"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:textSize="13sp"
                        android:maxLength="2000"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:id="@+id/etNote"
                        android:layout_margin="5dp"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/oneTime"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_2" />

    </LinearLayout>
    <LinearLayout
        android:background="@color/grey_100"
        android:layout_gravity="center"
        android:layout_below="@id/answer"
        android:id="@+id/always"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    android:layout_margin="4dp"
                    android:id="@+id/rc_specialquestion"/>


            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_blue"
                android:id="@+id/btn_confirm"
                android:text="ဆက်ရန်"/>





    </LinearLayout>


</RelativeLayout>