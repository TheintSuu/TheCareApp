<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    tools:context=".activities.QuestionActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/white"
        app:titleTextColor="@color/black"
        app:title="လူနာအချက်အလက်များ ဖြည့်ပါ"
        android:elevation="4dp"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
        android:theme ="?attr/actionBarTheme"
        android:layout_height="?actionBarSize"
        android:id="@+id/toolbar"/>
    <ImageView
        android:layout_below="@id/toolbar"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_xxlarge"
        android:layout_marginTop="@dimen/margin_medium_2"
        app:srcCompat="@drawable/ic_baseline_check_circle_24" />

    <ProgressBar
        android:id="@+id/pgBar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_toRightOf="@id/imageView"
        android:layout_toLeftOf="@id/imageView2"
        android:layout_alignTop="@id/imageView"
        android:backgroundTint="@color/textColorGray"
        android:progressTint="@color/colorPrimary"
        android:progressBackgroundTint="@color/colorPrimary"
        android:background="@color/colorPrimary"
        android:progress="50"
        style="@style/pgbar"
       />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_xxlarge"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_medium_3"
        android:paddingTop="@dimen/margin_small"
        android:layout_alignTop="@id/imageView"
        app:srcCompat="@drawable/ic_baseline_check_circle_24" />

    <TableRow
        android:id="@+id/tb1"
        android:layout_below="@id/pgBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/margin_medium_2"
        android:background="@color/grey_100"
        android:weightSum="2" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/margin_medium"
            android:paddingHorizontal="@dimen/margin_medium_2"
            android:text="အထွေထွေမေးခွန်းများ"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular" />
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/margin_medium"
            android:paddingHorizontal="@dimen/margin_medium_2"
            android:text="ရောဂါဆိုင်ရာ မေးခွန်းများ"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular" />
    </TableRow>

    <LinearLayout android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_below="@id/tb1"
        android:id="@+id/oneTime"
        android:padding="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:background="@color/grey_100"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ly_onetime_fil"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="အမည်"
                        android:textSize="@dimen/text_regular"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_white"
                        android:paddingHorizontal="@dimen/margin_medium_2"
                        android:maxLines="1"
                        android:hint=" "
                        android:inputType="text"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:id="@+id/edName"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="မွေးနေ့"
                        android:textSize="@dimen/text_regular"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_white"
                        android:padding="10dp"
                        android:maxLines="1"
                        android:hint="25 Nov 2000"
                        android:inputType="text"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:id="@+id/etBD"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="ဖုန်းနံပါတ်"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:textSize="@dimen/text_regular"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_white"
                        android:paddingHorizontal="@dimen/margin_medium_2"
                        android:maxLines="1"
                        android:hint=" "
                        android:inputType="number"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:id="@+id/etPhone"
                        android:layout_margin="5dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="အရပ်"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/white">
                        <RelativeLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_white"
                                android:padding="10dp"
                                android:maxLines="1"
                                android:hint="0"
                                android:inputType="number"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:id="@+id/ed_height"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="ft"
                                android:gravity="center"
                                android:layout_margin="5dp"
                                android:textColor="@color/textColorGray"
                                android:textSize="@dimen/text_small"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="သွေးအမျိုးအစား"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/white">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:entries="@array/bloodtype"
                            android:id="@+id/bloodtype_spinner"/>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    android:visibility="gone"
                    android:id="@+id/card_userinfo"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_margin="6dp"
                            android:padding="5dp"
                            android:id="@+id/userinfotext"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="ပေါင်ချိန်"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white">
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_white"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:textSize="13sp"
                            android:hint="0"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:id="@+id/ed_weight"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="lb"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textColor="@color/textColorGray"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="သွေးအမျိုးအစး"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white">
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_white"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:textSize="13sp"
                            android:hint="0"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:id="@+id/ed_bloodpressure"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="mmhg"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textColor="@color/textColorGray"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="မတည့်သော ဆေးအမျိုးအစား"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_white"
                        android:padding="10dp"
                        android:maxLines="4"
                        android:lines="5"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:textSize="13sp"
                        android:maxLength="2000"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:id="@+id/etNote"
                        android:layout_margin="5dp"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/oneTime"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:background="@color/grey_100"
        android:layout_gravity="center"
        android:layout_below="@id/answer"
        android:id="@+id/always"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="ပေါင်ချိန်"
                android:layout_marginTop="@dimen/margin_medium_2"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white">
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_white"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:textSize="13sp"
                            android:hint="0"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:id="@+id/ed_always_weight"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="lb"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textColor="@color/textColorGray"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="သွေးအမျိုးအစး"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white">
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_white"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:textSize="13sp"
                            android:hint="0"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:id="@+id/ed_alwyas_bloodpressure"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="mmhg"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textColor="@color/textColorGray"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_below="@id/always"
        android:layout_marginRight="@dimen/margin_medium_3"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:drawablePadding="2dp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
        android:textColor="@color/white"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_blue"
        android:id="@+id/btn_confirm"
        android:text="ဆက်ရန်"/>
</RelativeLayout>
</ScrollView>