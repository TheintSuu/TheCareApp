<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:id="@+id/layoutProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_xxlarge"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium_2"
        app:srcCompat="@drawable/ic_baseline_check_circle_24" />

    <ProgressBar
        android:id="@+id/pgBar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
       android:layout_gravity="center"
        android:layout_toRightOf="@id/imageView"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/colorPrimary"
        android:progress="100"
        android:backgroundTint="@color/colorPrimary"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
       />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_medium_3"
        android:paddingTop="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium_2"
        app:srcCompat="@drawable/ic_baseline_check_circle_24" />
    </LinearLayout>
    <TableRow
        android:id="@+id/tb1"
        android:layout_below="@id/layoutProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/margin_medium_2"
        android:weightSum="2" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/margin_medium"
            android:paddingHorizontal="@dimen/margin_medium_2"
            android:text="အထွေထွေမေးခွန်းများ"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular" />
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/margin_medium"
            android:paddingHorizontal="@dimen/margin_medium_2"
            android:text="ရောဂါဆိုင်ရာ မေးခွန်းများ"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular" />
    </TableRow>

<LinearLayout
android:id="@+id/special"
android:layout_width="match_parent"
android:orientation="vertical"
    android:layout_below="@id/tb1"
android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSpecial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_2" />
</androidx.cardview.widget.CardView>



</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:padding="@dimen/margin_medium_2"
        android:layout_below="@id/special"
        android:layout_marginRight="@dimen/margin_medium_3"
        android:textSize="@dimen/text_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_height="45dp"
        android:background="@drawable/btn_blue"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnConfirm"
       android:layout_centerHorizontal="true"
        android:text="ချိန်းဆိုမှု ပြုလုပ်မည်"/>
</RelativeLayout>
</ScrollView>